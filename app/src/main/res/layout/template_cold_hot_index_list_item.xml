<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/app_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_date"
            android:padding="5dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"/>
        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/app_black"
                android:id="@+id/tv_column_1_1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_1_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_1_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_1_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/app_black"
                android:id="@+id/tv_column_2_1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_2_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_2_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:gravity="center"
                android:id="@+id/tv_column_2_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/app_black"
                android:id="@+id/tv_column_3_1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:id="@+id/tv_column_3_2"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:textColor="@color/app_black"
                android:id="@+id/tv_column_3_3"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_column_3_4"
                android:gravity="center"
                android:textColor="@color/app_black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>